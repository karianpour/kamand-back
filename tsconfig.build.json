{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/*"]
    },
    "target": "es2016",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["es2016"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": false,
    "experimentalDecorators": false,
    "sourceMap": true,
    "declaration": true
  },
  "include": [
    "src/lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}