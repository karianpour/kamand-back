{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "lib": ["es2015", "dom", "es2017"],
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": true,
  },
  "include": [
    "src/lib/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
